<?xml version = "1.0" encoding = "utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/green"
    tools:context=".activities.NotificationActivity"
    android:padding="5dp"
>

    <ImageView
        android:id="@+id/small_icon_layout_notification"
        android:layout_width="25dp"
        android:layout_height="25dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:src="@drawable/logo_notification"
    />


    <TextView
        android:id="@+id/channel_layout_notification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/small_icon_layout_notification"
        app:layout_constraintBottom_toBottomOf="@+id/small_icon_layout_notification"
        app:layout_constraintStart_toEndOf="@+id/small_icon_layout_notification"
        android:layout_marginLeft="5dp"
        android:textStyle="italic"
        android:textSize="15dp"
        android:text="Channel"
    />


    <TextView
        android:id="@+id/priority_layout_notification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/small_icon_layout_notification"
        app:layout_constraintBottom_toBottomOf="@+id/small_icon_layout_notification"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginLeft="5dp"
        android:textStyle="italic"
        android:textSize="15dp"
        android:text="Priority"
    />


    <TextView
        android:id="@+id/title_layout_notification"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/small_icon_layout_notification"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="5dp"
        android:textSize="25dp"
        android:textStyle="bold"
        android:text="Title"
    />


    <TextView
        android:id="@+id/text_layout_notification"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/title_layout_notification"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="5dp"
        android:textSize="15dp"
        android:text="Text"
    />

</androidx.constraintlayout.widget.ConstraintLayout>